# NameGnome Serve Environment Configuration
# Copy this file to .env and fill in your values

# Debug mode (set to 1 to enable debug logging)
NAMEGNOME_DEBUG=0

# Cache location (default: ~/.namegnome/cache/namegnome.db)
# NAMEGNOME_CACHE_PATH=/path/to/cache.db

# API Keys (required for provider lookups)
# Get your keys from:
# - TMDB: https://www.themoviedb.org/settings/api
# - TVDB: https://thetvdb.com/api-information
# - MusicBrainz: (no key required, but consider rate limits)

TMDB_API_KEY=your_tmdb_api_key_here
TVDB_API_KEY=your_tvdb_api_key_here

# Ollama configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=namegnome

# Server configuration
NAMEGNOME_HOST=127.0.0.1
NAMEGNOME_PORT=8000

# Cache TTL (in seconds)
CACHE_TTL_SERIES=2592000
CACHE_TTL_EPISODES=604800
CACHE_TTL_MOVIES=2592000
CACHE_TTL_MUSIC=2592000
CACHE_TTL_DECISIONS=7776000

# Rate limiting (requests per minute)
TMDB_RATE_LIMIT=40
TVDB_RATE_LIMIT=40
MUSICBRAINZ_RATE_LIMIT=50

# Logging
LOG_LEVEL=INFO

